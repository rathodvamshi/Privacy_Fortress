# ── Backend Environment Variables ──────────────────
# Copy this file to .env and fill in your values
# On Render, set these in Dashboard → Environment

# MongoDB Atlas
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=YourApp

# Groq API Key
GROQ_API_KEY=gsk_your_groq_api_key_here

# Redis Cloud
REDIS_URL=redis://default:password@your-redis-host:port

# Encryption Key (must be exactly 32 characters for AES-256)
ENCRYPTION_KEY=your-32-character-encryption-key

# App Config
APP_ENV=production
APP_SECRET=your-strong-jwt-secret-key-here

# CORS — your Vercel frontend URL (comma-separated for multiple)
CORS_ORIGINS=https://your-frontend-app.vercel.app

# TTL Settings (30 minutes = 1800 seconds)
VAULT_TTL_SECONDS=1800

# Groq Model
GROQ_MODEL=llama-3.3-70b-versatile
